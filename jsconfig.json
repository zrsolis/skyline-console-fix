{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "client/*": ["./src/client/*"],
      "src/*": ["./src/*"],
      "asset/*": ["./src/asset/*"],
      "image/*": ["./src/asset/image/*"],
      "core/*": ["./src/core/*"],
      "containers/*": ["./src/containers/*"],
      "layouts/*": ["./src/layouts/*"],
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "utils/*": ["./src/utils/*"],
      "stores/*": ["./src/stores/*"],
      "locales/*": ["./src/locales/*"],
      "styles/*": ["./src/styles/*"],
      "resources/*": ["./src/resources/*"]
    }
  },
  "include": ["src/**/*"]
}
